extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= project.project_name

        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each tech in project.technologies
            li= tech

        a.button.expanded(href=`${project.live_link}`, target= "_blank") Live Demo
        a.button.expanded(href= `${project.github_link}`, target= "_blank") GitHub Repo
    //- If the project has a video url it is displayed
    if project.video_urls
      video.image(playsinline loop muted autoplay)
        source(src=`/static/images/${project.video_urls.video_url_webm}` type="video/webm")
        source(src=`/static/images/${project.video_urls.video_url_mp4}` type="video/mp4")
    //- Displays each project url
    each img in project.image_urls
      img.image(src= `/static/images/${img}`)
    